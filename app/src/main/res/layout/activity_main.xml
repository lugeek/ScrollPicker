<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lugeek.scrollpicker.MainActivity">

    <com.lugeek.scrollpicker.ScrollPicker
        android:id="@+id/scrollPicker"
        android:layout_width="200dp"
        android:layout_height="500dp"
        android:background="#999"
        android:layout_centerInParent="true"
        app:show_count="5"
        app:show_line="true"
        app:line_color="#00ffff"
        app:line_width="1px"
        app:select_text_color="#ff4965"
        app:unselect_text_color="#3d3d3d"
        app:select_text_size="20sp"
        app:unselect_text_size="20sp"/>
</RelativeLayout>
